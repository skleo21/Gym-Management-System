
@using Myproject.Models
    @Model  IEnumerable<Interno>


    @{
        ViewBag.Title = "HomeClientes";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>Secção de Clientes</h1>

    <p>

        Esta secção irá gerir os clientes da minha empresa.
        Esta view foi implementada no seguinte contexto:

    </p>

    <h3>Hospital:@ViewBag.Hospital</h3>
    <h4>Internato:@ViewData["especialidade"]</h4>
    <h4>Especialista: @TempData["especialista"]</h4>

    <table class="table table-striped table table-bordered table-responsive bg-success ">
        <thead>
            <tr>
                <td colspan="2" style="text-align:center; background-color: orange; font-size:2em;">Internos Estagiarios</td>
            </tr>
            <tr>
                <td style="width:33px">Num</td>
                <td>Nome</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Interno a in Model)
            {

                <tr>
                    <td>@a.Num</td>
                    <td>@a.Nome</td>

                </tr>

            }

        </tbody>

    </table>

    @using (Html.BeginForm("HomeClientes", "Clientes", FormMethod.Post))

    {


        <div class="form-group">

            <label for="estagiario"> Escolha um estagiário:</label>
            <input type="text" name="estagiario" id="estagiario" class="form-control" />

        </div>
        <div class="form-group">

            
            <input type="submit" name="btsubmit" id="btsubmit" value="submit" class="btn btn-danger" />

            <hr />
            @ViewBag.resposta;

        </div>

    }






