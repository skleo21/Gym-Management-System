@using PagedList.Mvc
@model PagedList.IPagedList<Myproject.Models.clientes>
@{
    ViewBag.Title = "ListarClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListarClientes</h2>
<h3 style="color:lawngreen;font-size:.9em;">@ViewBag.msg</h3>

<p>
    @Html.ActionLink("Novo Cliente", "AddCliente", "Clientes")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "ListarClientes", new { ordem = ViewBag.nome })
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Idade
        </th>
        <th>
            Foto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ncliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datanasC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @{
                    if (String.IsNullOrEmpty(item.foto))
                    {
                        <img width="40" src='@Url.Content("~/fotos/nophoto.png")' alt="erro" />
                    }
                    else
                    {
                        <img width="40" src='@Url.Content(item.foto)' alt="erro" />

                    }

                }
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCliente", new { id = item.idcli }) |
                @Html.ActionLink("Delete", "DeleteCliente", new { id = item.idcli })
            </td>
        </tr>
    }

</table>


@Html.PagedListPager(Model, (page => Url.Action("ListarClientes", new { page })))
<br />
@((Model.PageNumber > Model.PageCount)?1:Model.PageNumber) de @Model.PageCount páginas