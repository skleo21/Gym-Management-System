@using PagedList.Mvc
@model PagedList.IPagedList<Myproject.Models.trainers>

@{
    ViewBag.Title = "ListarTrainers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListarTrainers</h2>
<h3 style="color:lawngreen;font-size:.9em;">@ViewBag.msg</h3>

<p>
    @Html.ActionLink("Novo Trainer", "AddTrainer", "Trainers")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "ListarClientes", new { ordem = ViewBag.nome })
        </th>
        <th>
           Experiencia
        </th>
        <th>
            Idade
        </th>
        <th>
            Foto
        </th>
        <th>
            Preço Hora
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.especialidades.especialidade)*@
        </th>
        <th></th>
    </tr>




    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ptrainer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.xp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            @*<td>
                @{
                    if (String.IsNullOrEmpty(item.ptrainerfoto))
                    {
                        <img width="40" src='@Url.Content("~/fotos/nophoto.png")' alt="erro" />
                    }
                    else
                    {
                        <img width="40" src='@Url.Content(item.ptrainerfoto)' alt="erro" />

                    }

                }
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.phora)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.especialidades.especialidade)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idpt }) |
                @Html.ActionLink("Details", "Details", new { id = item.idpt }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idpt })
            </td>
        </tr>
    }

</table>


@Html.PagedListPager(Model, (page => Url.Action("ListarTrainers", new { page })))
<br />
@((Model.PageNumber > Model.PageCount)?1:Model.PageNumber) de @Model.PageCount páginas